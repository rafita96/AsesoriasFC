{% trans_default_domain 'FOSUserBundle' %}
<body class="text-center">
<div class="row">
    <div class="card col-12">
        <div class="card-header"><h1 class="text-center">Perfil</h1></div>
        <div class="card-body">
            
            <div class="row">
                <div class="col-4"><h4 class="text-right"><b>Nombre:</b></h4></div>
                <div class="col-8"><h4 class="text-left">{{ user.nombre }}</h4></div>
            </div>

            <div class="row">
                <div class="col-4"><h4 class="text-right"><b>Apellido Paterno:</b></h4></div>
                <div class="col-8"><h4 class="text-left">{{ user.aPaterno }}</h4></div>
            </div>

            <div class="row">
                <div class="col-4"><h4 class="text-right"><b>Apellido Materno:</b></h4></div>
                <div class="col-8"><h4 class="text-left">{{ user.aMaterno }}</h4></div>
            </div>

            <div class="row">
                <div class="col-4"><h4 class="text-right"><b>Correo Institucional:</b></h4></div>
                <div class="col-8"><h4 class="text-left">{{ user.email ~ "@uabc.edu.mx" }}</h4></div>
            </div>
        </div>

        <div class="card-footer">
            {# <a class="btn btn-secondary" href="{{ path('registro') }}">Editar Perfil</a> #}
        </div>
    </div>
</div>
</body>
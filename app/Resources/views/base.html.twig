<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title>{% block title %}Asesorías FC{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('resources/css/bootstrap.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('resources/css/toast.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('resources/fontawesome/css/fontawesome-all.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('resources/img/logo_uabc.png') }}" />
    </head>
    <body>
        {% block navbar %}
        <nav class="navbar navbar-dark" style="background-color: #027f45;">
            <a class="navbar-brand" href="{{ path('homepage') }}">Asesorías FC</a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <li class="nav-item"><a class="nav-link" href="">Administradores</a></li>
                    {% endif %}

                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('admin_home') }}">Asesores</a></li>
                    {% endif %}

                    {% if is_granted('ROLE_ADMIN') or (is_granted('ROLE_USER') and app.user.asesor) %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('solicitudes') }}">Solicitudes</a></li>
                    {% endif %}

                    {% if not is_granted('ROLE_ADMIN') and is_granted('ROLE_USER') %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('citas') }}">Citas</a></li>
                    {% endif %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('perfil_alumno') }}">Perfil</a></li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('fos_user_security_logout') }}">{{"Cerrar Sesión"}}</a>
                    </li>
                </ul>
            </div>
        </nav>
        {% endblock %}
        
        <div class="container" style="padding-top: 10px">
            {% block body %}{% endblock %}
        </div>

        {% block javascripts %}
            <script src="{{ asset('resources/js/jquery-3.2.1.min.js') }}"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
            <script type="text/javascript" src="{{ asset('resources/js/bootstrap.js') }}"></script>
            <script type="text/javascript" src="{{ asset('resources/js/toast.js') }}"></script>
        {% endblock %}
    </body>
</html>

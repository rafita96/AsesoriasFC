<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title>{% block title %}Asesorías FC{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('resources/css/bootstrap.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('resources/img/logo_uabc.png') }}" />
    </head>
    <body>
        {% block navbar %}
        <nav class="navbar navbar-dark" style="background-color: #027f45;">
            <a class="navbar-brand" href="{{ path('homepage') }}">Asesorías FC</a>

            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <a class="navbar-brand" href="#">Administradores</a>
            {% endif %}

            {% if is_granted('ROLE_ADMIN') %}
                <a class="navbar-brand" href="#">Asesores</a>
            {% endif %}

            {% if not is_granted('ROLE_ADMIN') and is_granted('ROLE_USER') and app.user.asesor %}
                <a class="navbar-brand" href="#">Solicitudes</a>
            {% endif %}

            {% if not is_granted('ROLE_ADMIN') and is_granted('ROLE_USER') %}
                <a class="navbar-brand" href="#">Citas</a>
            {% endif %}
            <a class="navbar-brand" href="#">Perfil</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('fos_user_security_logout') }}">{{"Cerrar Sesión"}}</a>
                    </li>
                </ul>
            </div>
        </nav>
        {% endblock %}
        
        <div class="container">
            {% block body %}{% endblock %}
        </div>

        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
            <script type="text/javascript" src="{{ asset('resources/js/bootstrap.js') }}"></script>
        {% endblock %}
    </body>
</html>
